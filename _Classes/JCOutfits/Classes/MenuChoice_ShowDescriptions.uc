//=============================================================================
// MenuChoice_ShowDescriptions
//=============================================================================

class MenuChoice_ShowDescriptions extends OutfitMenuChoice;

// ----------------------------------------------------------------------
// LoadSetting()
// ----------------------------------------------------------------------

function LoadSetting()
{
	SetValue(int(O.noDescriptions));
}

// ----------------------------------------------------------------------
// SaveSetting()
// ----------------------------------------------------------------------

function SaveSetting()
{
	O.noDescriptions = bool(GetValue());
}

// ----------------------------------------------------------------------
// ----------------------------------------------------------------------

function ResetToDefault()
{
	SetValue(int(O.noDescriptions));
}

// ----------------------------------------------------------------------
// ----------------------------------------------------------------------

defaultproperties
{
     HelpText="Show outfit descriptions"
     actionText="|&Enable Descriptions"
}
